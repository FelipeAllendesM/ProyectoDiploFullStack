<div class="container" style="margin-top: 35px;">
    <h2 class="text-center mb-4">Acceso Intranet</h2>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-1 rounded-4">
                <div class="card-body">
                    <form action="/admin/login" method="post">
                        <div class="row mb-3">
                            <div class="input-group">
                                <label for="inputUser" class="col-sm-2 col-form-label">Usuario</label>
                                <span class="input-group-text">
                                    <i class="bi bi-person-fill"></i>
                                </span>
                                <input type="text" class="form-control" id="inputUser" name="usuario">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="input-group">
                                <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                                <span class="input-group-text">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input type="password" class="form-control" id="inputPassword" name="password">
                            </div>
                        </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-sm px-4">Ingresar</button>
                </div>
                <br />
                </form>
                {{#if error}}
                <p>Usuario y/o Contrase√±a Incorrectos</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>
</div>