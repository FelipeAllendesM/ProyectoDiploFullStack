<div class="container" style="margin-top: 100px;">
    <h2>Agregar Noticia de Novedades</h2>
    <br>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="row mb-3">
                    <input type="text" class="form-control" placeholder="Subtitulo" name="subtitulo">
                </div>
                <div class="row mb-3">
                    <input type="text" class="form-control" placeholder="Cuerpo" name="cuerpo">
                </div>
                <div class="row mb-3">
                    <label for="">Imagen:<input type="file" name="imagen"> </label>
                </div>
                <button type="submit" class="btn btn-primary">Agregar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>